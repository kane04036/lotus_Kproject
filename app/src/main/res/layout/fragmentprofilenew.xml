<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <TextView
        android:id="@+id/setting"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="설정"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:paddingLeft="20dp"
        android:paddingTop="15dp"
        android:paddingBottom="10dp"
        android:textStyle="bold"

        />


    <TextView
        android:id="@+id/EditText0"
        android:layout_width="380dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/border"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="닉네임"
        android:textColor="@color/white"
        android:textSize="40sp"

        />

    <TextView
        android:id="@+id/EditText00"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="25dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/EditText0"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:text="내 정보"
        android:textStyle="bold"
        android:fontFamily="@font/minsans"
        android:textSize="30sp" />
    <TextView
        android:id="@+id/EditText01"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="25dp"
        android:layout_height="70dp"
        android:layout_below="@+id/EditText00"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:text="과목갱신"
        android:textStyle="bold"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/EditText02"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="25dp"
        android:layout_height="70dp"
        android:layout_below="@+id/EditText01"
        android:layout_centerHorizontal="true"
        android:text="닉네임 변경"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:onClick="onTextViewClicked"
        android:textColor="@color/black"
        android:clickable="true"
        android:textSize="22sp"/>
    <TextView
        android:id="@+id/EditText03"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="25dp"
        android:layout_height="70dp"
        android:layout_below="@+id/EditText02"
        android:layout_centerHorizontal="true"
        android:text="비밀번호 변경"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:onClick="onTextViewClicked"
        android:textColor="@color/black"
        android:clickable="true"
        android:textSize="22sp"/>
    <TextView
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="25dp"
        android:layout_height="70dp"
        android:layout_below="@+id/EditText03"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:text="로그아웃"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:textSize="22sp"/>
    <View
        android:id="@+id/view3"
        android:layout_width="wrap_content"
        android:layout_height="3px"
        android:layout_below="@id/btnLogout"
        android:layout_alignStart="@+id/EditText0"
        android:layout_alignEnd="@+id/EditText0"
        android:background="#a1a1a1"
        android:visibility="gone"
        />
///////////////기타
    <TextView
        android:id="@+id/EditText000"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="25dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/view3"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:text="기타"
        android:textStyle="bold"
        android:fontFamily="@font/minsans"
        android:textSize="30sp" />
    <TextView
        android:id="@+id/Btn_1"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="25dp"
        android:layout_height="70dp"
        android:layout_below="@+id/view3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:clickable="true"
        android:fontFamily="@font/minsans"
        android:textStyle="bold"
        android:onClick="onTextViewClicked"
        android:text="공지사항"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        android:textSize="22sp" />
    <TextView
        android:id="@+id/Btn_2"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="25dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:text="문의하기"
        android:textStyle="bold"
        android:onClick="onTextViewClicked"
        android:textColor="@color/black"
        android:clickable="true"
        android:textSize="22sp"
        android:gravity="center_vertical"
        android:layout_below="@id/Btn_1"
        />

    <View
        android:layout_width="wrap_content"
        android:layout_height="3px"
        android:layout_below="@id/Btn_2"
        android:layout_alignStart="@+id/EditText0"
        android:layout_alignEnd="@+id/EditText0"
        android:background="#a1a1a1"
        android:visibility="gone"

        />

</RelativeLayout>