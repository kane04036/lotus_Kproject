<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/postRelative"
        >
        <TextView
            android:id="@+id/tvPostLecture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="강좌이름"
            android:layout_centerInParent="true"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="10dp"
            />

        <View
            android:id="@+id/view2"
            android:background="#b0b0b0"
            android:layout_width="match_parent"
            android:layout_height="5px"
            android:layout_below="@+id/tvPostLecture"
            />


    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_below="@+id/postRelative"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvDetailTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="10dp"
                    android:text="글제목인데 이렇게 쓰면 왜 글씨가 안 보일까?"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/btnMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="3dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/moreimg" />
            </RelativeLayout>


            <TextView
                android:id="@+id/tvDetailNickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="흥짓뿡" />


            <TextView
                android:id="@+id/tvDetailMsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textColor="@color/black"
                android:textSize="17dp" />
            <View
                android:background="#bababa"
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/listViewComment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never" />



        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

    <RelativeLayout
        android:id="@+id/underbarLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        >

        <CheckBox
            android:id="@+id/chkAnonymousCommnet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/edtComment"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:text="익명"
            android:textSize="12dp" />

        <Button
            android:id="@+id/btnComment"
            android:layout_width="50dp"
            android:layout_height="38dp"
            android:layout_alignTop="@+id/edtComment"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/roundcorner"
            android:text="등록"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/edtComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/btnComment"
            android:layout_toRightOf="@+id/chkAnonymousCommnet"
            android:hint="댓글을 입력하세요" />


    </RelativeLayout>




</RelativeLayout>