<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textSize="40dp"
        android:gravity="center"
        android:textStyle="bold"
        android:fontFamily="@font/minsans"
        android:paddingTop="20dp"
        android:textColor="@color/black"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ID는 변경할 수 없습니다"
        android:gravity="center"
        android:fontFamily="@font/minsans"
        android:layout_marginTop="5dp"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="80dp">
        <EditText
            android:id="@+id/edtRegID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTintMode="add"
            android:ems="10"
            android:textSize="20dp"
            android:backgroundTint="#317abe"
            android:layout_marginLeft="50dp"
            android:hint="ID"
            android:maxLength="20"
            />
        <Button
            android:id="@+id/btnIdCheck"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:text="중복확인"
            android:textColor="@color/white"
            android:backgroundTint="#93DAFF"
            android:textStyle="bold"
            android:fontFamily="@font/minsans"
            android:textSize="12dp"
            />

    </LinearLayout>
    <TextView
        android:id="@+id/tvIdCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginLeft="50dp"
        android:textSize="10dp"
        android:textColor="#ff4040"/>




    <EditText
        android:id="@+id/edtRegPW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:backgroundTintMode="add"
        android:ems="10"
        android:textSize="20dp"
        android:backgroundTint="#317abe"
        android:inputType="textPassword"
        android:hint="비밀번호"
        android:maxLength="20"

        />

    <TextView
        android:id="@+id/tvPwCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginLeft="50dp"
        android:textSize="10dp" />


    <EditText
        android:id="@+id/edtRegPWcheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTintMode="add"
        android:ems="10"
        android:textSize="20dp"
        android:backgroundTint="#317abe"
        android:layout_marginLeft="50dp"
        android:inputType="textPassword"
        android:hint="비밀번호 확인"
        android:maxLength="20"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호는 20자리 이내로 설정가능합니다"
        android:layout_marginLeft="50dp"
        android:textSize="10dp"
        android:layout_marginBottom="7dp"
        />




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <EditText
        android:id="@+id/edtRegNickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTintMode="add"
        android:ems="10"
        android:textSize="20dp"
        android:backgroundTint="#317abe"
        android:layout_marginLeft="50dp"
        android:hint="닉네임"
        android:maxLength="15"
        />
        <Button
            android:id="@+id/btnNicknameCheck"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:text="중복확인"
            android:textStyle="bold"
            android:fontFamily="@font/minsans"
            android:textSize="12dp"
            android:textColor="@color/white"
            android:backgroundTint="#93DAFF"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/tvNicknameCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginLeft="50dp"
        android:textSize="10dp"
        android:textColor="#ff4040"/>
    <Button
        android:id="@+id/btnRegister"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="확인"
        android:layout_gravity="center"
        android:backgroundTint="#317abe"
        android:layout_marginTop="50dp"
        android:enabled="true"
        android:textStyle="bold"
        android:fontFamily="@font/minsans"
        android:textColor="@color/white"
        />


</LinearLayout>