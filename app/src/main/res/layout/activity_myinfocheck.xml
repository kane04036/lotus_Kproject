<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="회원 정보를 확인해주세요"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="수강중인 강의는 임의로 변경할 수 없습니다." />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:paddingLeft="20dp"
        android:text="학교 아이디(학번)"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/edtSchoolID"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/underline"
        android:ems="10"
        android:layout_gravity="center_horizontal"
        android:hint="ID" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:text="학교 비밀번호"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/edtSchoolPW"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"

        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/underline"
        android:ems="10"

        />

    <Button
        android:id="@+id/btnRenew"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/roundcorner"
        android:padding="5dp"
        android:layout_margin="20dp"
        android:text="강의 불러오기"
        android:textSize="18dp"
        android:textColor="@color/white"/>


    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:max="100"
        android:progressTint="#317abe"
        android:visibility="invisible" />
    <TextView
        android:id="@+id/notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="invisible"/>



    <ScrollView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@layout/border"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <EditText
                android:id="@+id/edtViewName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:hint="이름"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:visibility="invisible"
                android:layout_margin="10dp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tvLectures"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:lineSpacingExtra="10dp"
                android:layout_gravity="center"
                android:gravity="center"/>
            <Button
                android:id="@+id/btnGoHome"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/roundcorner"
                android:text="확인"
                android:layout_marginTop="10dp"
                android:visibility="invisible"
                android:textSize="18dp"
                android:textColor="@color/white"/>
        </LinearLayout>
    </ScrollView>






</LinearLayout>

