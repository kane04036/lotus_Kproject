<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="비밀번호 변경"
        android:textSize="40dp"
        android:gravity="center"
        android:paddingTop="70dp"
        android:textColor="@color/black"
        />




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="80dp">
        <EditText
            android:id="@+id/edtOriginPW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:maxLength="20"
            android:backgroundTintMode="add"
            android:ems="10"
            android:textSize="20dp"
            android:backgroundTint="#317abe"
            android:layout_marginLeft="50dp"
            android:hint="기존 비밀번호"
            android:inputType="textPassword"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/edtNewPW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTintMode="add"
            android:ems="10"
            android:textSize="20dp"
            android:backgroundTint="#317abe"
            android:layout_marginLeft="50dp"
            android:hint="새 비밀번호"
            android:maxLength="20"
            android:inputType="textPassword"
            />

    </LinearLayout>
    <TextView
        android:id="@+id/tvPWChangeCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호는 최대 20자리 설정가능합니다."
        android:layout_marginLeft="50dp"
        android:textSize="10dp"
        android:layout_marginBottom="7dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/edtNewPWCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTintMode="add"
            android:ems="10"
            android:textSize="20dp"
            android:backgroundTint="#317abe"
            android:layout_marginLeft="50dp"
            android:hint="새 비밀번호 확인"
            android:maxLength="20"
            android:inputType="textPassword"
            />

    </LinearLayout>
    <Button
        android:id="@+id/btnPWChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="확인"
        android:layout_gravity="center"
        android:backgroundTint="#317abe"
        android:layout_marginTop="50dp"
        android:enabled="true"
        android:textColor="@color/white"
        />


</LinearLayout>